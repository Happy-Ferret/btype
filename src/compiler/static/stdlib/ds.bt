}


object GenericDLLNode {
    #@ This is a generic linked list node. It supports doubly-linked lists.

    with Parent;
    with T;

    Parent:parent;
    GenericDLLNode<Parent, T>:next;
    GenericDLLNode<Parent, T>:previous;
    T:value;

    new(Parent:parent, T:value) {
        self.parent = parent;
        self.value = value;
    }

}
